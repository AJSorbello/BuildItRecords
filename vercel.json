  "builds": [
    {
      "src": "build-script.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install --legacy-peer-deps"
      }
    },
    {
      "src": "api/api-consolidated.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/artist-releases.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/inspect-schema.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/utils/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Access-Control-Allow-Credentials": "false",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,OPTIONS,PATCH,DELETE,POST,PUT",
        "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-Type, Authorization"
      }
    },
    {
      "src": "/(assets|images)/(.*)",
      "dest": "/dist/$1/$2",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg))",
      "dest": "/dist/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/admin", "destination": "/dist/index.html" },
    { "source": "/admin/(.*)", "destination": "/dist/index.html" },
    { "source": "/(.*)", "destination": "/dist/$1" }
  ],
  "env": {
    "NODE_ENV": "production",
    "DB_SSL": "true",
    "PORT": "3000"
  }
}
