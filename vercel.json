        "installCommand": "npm install --no-package-lock"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { 
      "src": "/api/test-db", 
      "dest": "/api/test-db.js" 
    },
    { 
      "src": "/api/health", 
      "dest": "/api/health.js" 
    },
    { 
      "src": "/api/artists", 
      "dest": "/api/artists/index.js" 
    },
    { 
      "src": "/api/artists/label/([^/]+)", 
      "dest": "/api/artists/label/[labelId].js?labelId=$1" 
    },
    { 
      "src": "/api/artist/([^/]+)", 
      "dest": "/api/artist/[id].js?id=$1" 
    },
    { 
      "src": "/api/tracks/label/([^/]+)", 
      "dest": "/api/tracks/label/[labelId].js?labelId=$1" 
    },
    { 
      "src": "/api/releases", 
      "dest": "/api/releases/index.js" 
    },
    { 
      "src": "/api/releases/([^/]+)", 
      "dest": "/api/releases/[id].js?id=$1" 
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ],
  "env": {
